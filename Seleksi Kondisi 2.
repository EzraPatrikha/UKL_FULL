 System.out.println("Seleksi Kondisi tentang KWH!");
            Scanner KWH = new Scanner(System.in);
            String LOOP;
            int[] no_id = {1,2,3,4};
            String[] NAMA = {"Galuh","Indro","Jedi","Kanu"};
            String[] alamat = {"Sawojajar","Kedung Kandang","Ijen","Dinoyo"};
            int[] gol = {1,2,3};
            do { System.out.print("Masukkan ID anda : ");
                int Id = KWH.nextInt();
                System.out.print("Masukkan Pemakaian Listrik (kwh) : ");
                int kwh = KWH.nextInt();
                System.out.println("=========================================");
                switch (Id) {
                    case 1: for (int i = 0; i < Id; i++) {
                        System.out.println("ID :"+no_id[i]);
                        System.out.println("Nama : "+NAMA[i]);
                        System.out.println("Alamat : "+alamat[i]);
                        System.out.println("Golongan Ke-"+gol[i]);
                    } System.out.println("===================================");
                  if (true) {
                    int hitungKWH = kwh*1000+13000;
                    if (hitungKWH<50000) {
                        System.out.println("Hasil Tagihan anda adalah : Rp. 50.000");
                    } else{
                        System.out.println("Hasil Tagihan anda adalah : Rp. "+hitungKWH);
                    }
                  }
                    break;
                case 2: for (int i = 1; i < Id; i++) {
                        System.out.println("ID :"+no_id[i]);
                        System.out.println("Nama : "+NAMA[i]);
                        System.out.println("Alamat : "+alamat[i]);
                        System.out.println("Golongan Ke-"+gol[i+1]);
                    } System.out.println("===================================");
                  if (true) {
                    int hitungKWH = kwh*1500+13000;
                    if (hitungKWH<50000) {
                        System.out.println("Hasil Tagihan anda adalah : Rp. 50.000");
                    } else{
                        System.out.println("Hasil Tagihan anda adalah : Rp. "+hitungKWH);
                    }
                  }
                  break;
                  case 3: for (int i = 2; i < Id; i++) {
                        System.out.println("ID :"+no_id[i]);
                        System.out.println("Nama : "+NAMA[i]);
                        System.out.println("Alamat : "+alamat[i]);
                        System.out.println("Golongan Ke-"+gol[i-1]);
                    } System.out.println("===================================");
                  if (true) {
                    int hitungKWH = kwh*1300+13000;
                    if (hitungKWH<50000) {
                        System.out.println("Hasil Tagihan anda adalah : Rp. 50.000");
                    } else{
                        System.out.println("Hasil Tagihan anda adalah : Rp. "+hitungKWH);
                    }
                  }
                  break;
                  case 4: for (int i = 3; i < Id; i++) {
                        System.out.println("ID :"+no_id[i]);
                        System.out.println("Nama : "+NAMA[i]);
                        System.out.println("Alamat : "+alamat[i]);
                        System.out.println("Golongan Ke-"+gol[i-1]);
                    } System.out.println("===================================");
                  if (true) {
                    int hitungKWH = kwh*1500+13000;
                    if (hitungKWH<50000) {
                        System.out.println("Hasil Tagihan anda adalah : Rp. 50.000");
                    } else{
                        System.out.println("Hasil Tagihan anda adalah : Rp. "+hitungKWH);
                    }
                  }
                  break;
                }
                System.out.println("============================================");
                System.out.print("Try Again? (y/n) : ");
                LOOP = KWH.next();
            } while (LOOP.equalsIgnoreCase("y"));
            System.out.println("Bye!");
            break;
