 int n = 2;
                int h = 5;
                int e = 3;
                int no = 0;
                int b = 0;
                    System.out.println("===================A=================");
                    for (int i = 0; i <=n; i++) {
                        for (int j = 0; j <=i; j++) {
                            if (true) {
                                int angka = h + (no*e);
                                System.out.print(angka+"\t");
                                b += angka;
                                no++;
                            }
                    }
                        System.out.println();
                } System.out.println("Totalnya : "+b);
                    System.out.println("===================B=================");
                    int q = 5;
                    int w = 3;
                    int f = 0;
                    int p = 0;
                    for (int i = 0; i <=2; i++) {
                        for (int j = i; j <3; j++) {
                            if (true) {
                                int angka = q + (f*w);
                                System.out.print(angka+"\t");
                                p += angka;
                                f++;
                            }
                        } System.out.println();
                    } System.out.println("Totalnya : "+p); 
